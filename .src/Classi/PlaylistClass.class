Public Function occurrences(what As String, where As String) As Integer
  'returns how many occurrences of "what" are found in "where"
  Dim c As Integer
  Dim nomore As Boolean = False
  Dim pos As Integer = 0
  Repeat
    pos = InStr(where, what, pos + 1)
    If pos = 0 Then
      nomore = True
        Else
      c += 1
    Endif
  Until nomore
  Return c
End

Public Sub FixBloat(fields As String[])
  'remove dupes field occurrences from table pTable
  Dim i As Integer
  Dim FixedRow, field As String
  For i = 0 To pTable.max
    For Each field In fields
      FixedRow &= TableSeparator & field & TableSeparator & GetValue(pTable[i], field)
    Next
    pTable[i] = FixedRow
    FixedRow = ""
  Next
End


